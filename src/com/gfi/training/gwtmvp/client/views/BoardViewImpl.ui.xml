<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.square {
        width:50px;
        height:50px;
    }
	</ui:style>
	<g:HTMLPanel>
	    <g:Label>Tic Tac Toe</g:Label>
	    
	    <g:Label ui:field="toPlay"></g:Label>
	    
	    <g:VerticalPanel>
	        <g:HorizontalPanel>
	            <g:Button ui:field="btnOne" styleName="{style.square}"></g:Button>
	            <g:Button ui:field="btnTwo" styleName="{style.square}"></g:Button>
	            <g:Button ui:field="btnThree" styleName="{style.square}"></g:Button>
	        </g:HorizontalPanel>
	        
	         <g:HorizontalPanel>
                <g:Button ui:field="btnFour" styleName="{style.square}"></g:Button>
                <g:Button ui:field="btnFive" styleName="{style.square}"></g:Button>
                <g:Button ui:field="btnSix" styleName="{style.square}"></g:Button>
            </g:HorizontalPanel>
            
	          <g:HorizontalPanel>
                <g:Button ui:field="btnSeven" styleName="{style.square}"></g:Button>
                <g:Button ui:field="btnEight" styleName="{style.square}"></g:Button>
                <g:Button ui:field="btnNine" styleName="{style.square}"></g:Button>
            </g:HorizontalPanel>
	    </g:VerticalPanel>
	    
	    <g:Button ui:field="reset">Restart Game</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 
