<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.square {
        width:50px;
        height:50px;
    }
	</ui:style>
	<g:HTMLPanel>
	    <g:Label>Tic Tac Toe</g:Label>
	    
	    <g:Label ui:field="toPlay"></g:Label>
	    
	    <g:VerticalPanel ui:field="squares">
	        
	    </g:VerticalPanel>
	    
	    <g:Button ui:field="reset">Restart Game</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 
